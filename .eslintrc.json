{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "backtick"],
    "no-tabs": ["error", { "allowIndentationTabs": true }],
    "no-empty": ["error", { "allowEmptyCatch": true }],
    "prefer-const": ["error", {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
    }
  },
  "env": {
    "browser": false,
    "node": true
  }
}
